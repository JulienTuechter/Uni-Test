@startuml init

' config includes
!include ../../config/macros.iuml
!include ../../config/styles.iuml

' diagram ibcludes
!include common.puml

' class diagram (https://plantuml.com/class-diagram)
$package(engine.init) {
    class MazeInfo <<leaf>> {
        - sizeX: int {readOnly}
        - sizeY: int {readOnly}
        - level: int {readOnly}
        --
        + MazeInfo(sizeX: int, sizeY: int, level: int)
        + sizeX(): int
        + sizeY(): int
        + level(): int
    }

    class PlayerInfo <<leaf>> {
        - id: int {readOnly}
        - sheetCount: int {readOnly}
        --
        + PlayerInfo(id: int, start: Position, sheetCount: int)
        + id(): int
        + start(): Position
        + sheetCount(): int
    }
    PlayerInfo --> "1" engine.common.Position : - start: Position {readOnly}

    interface InitFactory <<interface>> {
        + createMaze(mazeInfo: MazeInfo): Maze {abstract}
        + createPlayer(playerInfo: PlayerInfo): Player {abstract}
    }
}

@enduml
